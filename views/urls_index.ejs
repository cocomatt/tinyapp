<!DOCTYPE html>
<html lang="en">
<head>
  <title>TinyApp</title>
</head>
<body>
  <header>
    <% include ./partials/_header %>
  </header>
  <main>
    <section class="content">
      <h1>Your short URLs</h1>
      <section class="urls">
        <table class="urls_table">
          <thead>
            <tr>
              <th>Short URL</th>
              <th>Long URL</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% for (shortURL in urls) { %>
              <tr>
                <td><a href="/u/<%= shortURL %>"><%= shortURL %></a></td>
                <td><%= urls[shortURL].longURL %></td>
                <td><form method="POST" action="/urls/<%= shortURL %>">
                  <a href="/urls/<%= shortURL %>">Edit</a></form></td>
                <td><form method="POST" action="/urls/<%= shortURL %>/delete">
                  <input type="submit" value="Delete"></form></td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </section>
      <section class="shorten_url">
        <a href="/urls/new">Shorten another URL</a>
      </section>
    </section>
  </main>
</body>
</html>
